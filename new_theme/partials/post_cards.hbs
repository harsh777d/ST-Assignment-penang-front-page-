<style>
    .content blockquote:not(:last-child), .content dl:not(:last-child), .content ol:not(:last-child), .content p:not(:last-child), .content pre:not(:last-child), .content table:not(:last-child), .content ul:not(:last-child){
        margin-bottom: 10px;
    }
    .content h1:not(:first-child){
        margin-top: 0;
    }
    
    .card-content {
    background-color: transparent;
    padding: 40px;
    }

    .content{
        font-size: 12px;
    line-height: 16px;
    font-weight: 500;
    letter-spacing: .5px;
    }

    .post_content{
        font-size: 16px;
    line-height: 24px;
    font-weight: 700;
    font-family: "Crimson Text",Georgia,serif;
    margin-top: 8px;
    overflow-y: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertica
    }

    .column{
        padding: 24px;
    }

    time{
        margin:0;
    }
</style>

<artical>
    <div class="card">
    {{#if feature_image}}
    <div class="card-image">
          <figure class="image is-4by3">
              <img src="{{feature_image}}" alt="{{title}}">
          </figure>
    </div>
    {{/if}}
    <div class="card-content">
        {{#if author.profile_image}}
        <div class="media">
            <div class="media-left">
                <figure class="image is-48x48">
                    <img src="{{author.profile_image}}" alt="Profile Image">
                </figure>
            </div>
        </div>
        {{/if}}
        
        
        <div class="content">
            <div style="word-spacing: 20px; display:flex" >
                {{author}} author |
                 <time style="word-spacing: normal; margin:0 20px">{{date published_at format="DD MMM YYYY"}}</time>
                 <span style="color: green;">
                 {{#if @member.paid}}
                 Paid
                 {{else}}
                   {{#if @member}}
                   Member
                   {{else}}
                   Public
                   {{/if}}
                {{/if}}
                </span>
            </div>
            <p>
                {{!-- {{#if author.name}}
                <h1>{{author.name}}</h1>
                {{else}} --}}
                <h1>{{title}}</h1>
                {{!-- {{/if}} --}}
            </p>
            <p class="post_content">
                {{#if meta_description}}
                  {{meta_description}}
                {{else}}
                  {{except words="50"}}....
                {{/if}}    
            </p>
            
        </div>
    </div>
    </div>
</artical>