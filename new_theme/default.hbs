<style>
    img{
        background:none;
    }

    .jumbotron{
        background-image: var(--bg-gradient);
    }

    .mail-input, .textarea {
    box-shadow: inset 0 0.0625em 0.125em rgba(10,10,10,.05);
    max-width: 60%;
    margin-right:-5px;
    width: 100%;
    border-top-left-radius: 30px;
    border-bottom-left-radius: 30px;
}
    .submit-input{
        box-shadow: inset 0 0.0625em 0.125em rgba(10,10,10,.05);
    max-width: 100%;
    width: 30%;
    border-top-right-radius: 30px;
    background-color: red;
    border-bottom-right-radius: 30px;
    margin-left: 0;
    color: white;
    }

    form button{
            font-size: 12px;
    line-height: 16px;
    font-weight: 600;
        padding: 16px 32px;
    }

    form span{
        font-size: 12px;
