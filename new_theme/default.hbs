    color: rgb(0,12,45);
    }

    .has-text-weight-bold{
        color: rgb(0,12,45);
        font-size: 48px;
        font-weight: 800;
    line-height: 56px;
    margin-bottom: 16px;
    }

    form{
        margin-top: 16px;
    }
    

